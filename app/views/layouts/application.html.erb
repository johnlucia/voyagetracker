<!DOCTYPE html>
<html>
  <head>
    <title>Voyagetracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script>window.mappedBoat = <%= @boat&.id || 1 %>;</script>

    

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Roboto:100,300,400,500,700|Philosopher:400,400i,700,700i" rel="stylesheet">

    <%= stylesheet_link_tag 'application', media: 'all' %>
    
  </head>

  <body>
    <%= render "shared/header" %>

    <%= render "shared/google_map" %>

    <% if notice || alert %>
      <section class="padd-section text-center wow fadeInUp">
        <h2>Boom!</h2>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </section>
    <% end %>

    <%= yield %>

    <%= javascript_include_tag 'application' %>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initRouteMap"></script>
  </body>
</html>
