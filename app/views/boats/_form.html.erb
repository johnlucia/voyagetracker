<section class="padd-section text-center wow fadeInUp">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div id="contact" class="form">
        <%= form_with(model: boat, local: true, class: "form contactForm") do |form| %>
          <% if boat.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(boat.errors.count, "error") %> prohibited this boat from being saved:</h2>

              <ul>
              <% boat.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= form.label :tracking_email %>
            <%= form.text_field :tracking_email, class: "form-control", disabled: !current_user.admin %>
          </div>
          <% if current_user.admin %>
            <div class="field form-group">
              <%= form.label :user_id %>
              <%= form.number_field :user_id, class: "form-control" %>
            </div>
          <% end %>

          <div class="actions">
            <%#= form.submit %>
            <%= button_tag "Submit" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
