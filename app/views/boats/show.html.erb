<h1><%= @boat.name %> is <%= @boat.status %></h1>
<p>Last Update At: <%= @boat.last_update %></p>
<p>Speed: <%= @boat.speed_in_knots %> knots</p>
<p>Heading: <%= @boat.heading %> degrees</p>
<p>Latitude: <%= @boat.latitude %></p>
<p>Longitude: <%= @boat.longitude %></p>

<h2>Recent Updates</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.how_long_ago %> ago:</td>
        <td><%= position.latitude %></td>
        <td><%= position.longitude %></td>
        <td><%= position.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
