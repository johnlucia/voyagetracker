<section class="padd-section text-center wow fadeInUp">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div id="contact" class="form">
        <h2>Sign up for a free account</h2>
        <p>Your "Account Key" can be found in the confirmation Email we sent you after your first position report.</p>

        <%= form_for(resource, as: resource_name, 
                               url: registration_path(resource_name),
                               class: "form contactForm") do |f| %>

          <%= devise_error_messages! %>

          <div class="field form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :account_key %><br />
            <%= f.text_field :account_key, class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="actions">
            <%# = f.submit "Sign up" %>
            <%= button_tag "Sign Up" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
